{
	"version": 1.0,
	"swagger": "2.0",
	"openapi": "3.0",
	"info": {
		"title": "Documentação Umbrella"
	},
	"tags": [
		{
			"name": "user",
			"description": "Endpoints relacionados ao usuário"
		},
		{
			"name": "comunidade"
		}
	],
	"schemes": ["https", "http"],
	"servers": [
		{
			"url": "http://localhost:5050",
			"description": "Api teste"
		}
	],
	"paths": {
		"/usuario/{id}/amizades": {
			"get": {
				"tags": ["user, comunidade"],
				"summary": "Lista as amizades do usuário",

				"consumes": ["application/json"],
				"produces": ["application/json"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"description": "ID do usuário",
						"required": true,
						"type": "integer",
						"format": "int64"
					}
				],
				"responses": {
					"200": {
						"description": "Credenciais aceitas",
						"schema": {
							"type": "array",
							"items": {
								"properties": {
									"id": {
										"type": "integer"
									},
									"nome": {
										"type": "string"
									},
									"descricao": {
										"type": "string"
									},
									"imagem": {
										"type": "string"
									},
									"banner": {
										"type": "string"
									},
									"criacao": {
										"type": "string",
										"format": "date-time"
									}
								}
							}
						}
					},
					"404": {
						"description": "Não encontrado",
						"schema": {
							"type": "object",
							"properties": {
								"err": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"user": {
			"type": "object",
			"properties": {
				"email": {
					"type": "string",
					"enum": ["othierry@daora.com"]
				},
				"senha": {
					"type": "string",
					"enum": ["1234"]
				}
			}
		}
	}
}
